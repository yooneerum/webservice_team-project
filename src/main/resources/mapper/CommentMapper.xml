<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="CommentMapper">

    <select id="findByNoticeId" parameterType="int"
            resultType="org.example.teamproject.vo.CommentVO">
        SELECT * FROM comment
        WHERE notice_id = #{noticeId}
        ORDER BY id DESC
    </select>

    <insert id="insert" parameterType="org.example.teamproject.vo.CommentVO">
        INSERT INTO comment (notice_id, writer, content)
        VALUES (#{noticeId}, #{writer}, #{content})
    </insert>

    <update id="update" parameterType="org.example.teamproject.vo.CommentVO">
        UPDATE comment
        SET content = #{content}
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="int">
        DELETE FROM comment WHERE id = #{id}
    </delete>

</mapper>
