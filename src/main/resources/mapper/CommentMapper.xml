<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="CommentMapper">

    <!-- ======================
         공지별 댓글 조회
     ====================== -->
    <select id="findByNoticeId"
            parameterType="int"
            resultType="org.example.teamproject.vo.CommentVO">
        SELECT
            id,
            notice_id,
            writer_id,
            content,
            created_at
        FROM comment
        WHERE notice_id = #{noticeId}
        ORDER BY id ASC
    </select>

    <!-- ======================
         댓글 단일 조회 (본인 확인용)
     ====================== -->
    <select id="findById"
            parameterType="int"
            resultType="org.example.teamproject.vo.CommentVO">
        SELECT
            id,
            notice_id,
            writer_id,
            content,
            created_at
        FROM comment
        WHERE id = #{id}
    </select>

    <!-- ======================
         댓글 작성
     ====================== -->
    <insert id="insert"
            parameterType="org.example.teamproject.vo.CommentVO">
        INSERT INTO comment (
            notice_id,
            writer_id,
            content
        ) VALUES (
                     #{noticeId},
                     #{writerId},
                     #{content}
                 )
    </insert>

    <!-- ======================
         댓글 수정
     ====================== -->
    <update id="update"
            parameterType="org.example.teamproject.vo.CommentVO">
        UPDATE comment
        SET content = #{content}
        WHERE id = #{id}
    </update>

    <!-- ======================
         댓글 삭제
     ====================== -->
    <delete id="delete"
            parameterType="int">
        DELETE
        FROM comment
        WHERE id = #{id}
    </delete>

</mapper>
