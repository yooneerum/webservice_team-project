<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="UserMapper">

    <!-- ðŸ”¥ ì»¬ëŸ¼ëª… â†” VO í•„ë“œëª… ë§¤í•‘ -->
    <resultMap id="UserMap" type="org.example.teamproject.vo.UserVO">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="email" column="email"/>
        <result property="role" column="role"/>
        <result property="classCode" column="class_code"/>
    </resultMap>

    <!-- ë¡œê·¸ì¸ -->
    <select id="findByUsernameAndPassword"
            parameterType="org.example.teamproject.vo.UserVO"
            resultMap="UserMap">
        SELECT *
        FROM user
        WHERE username = #{username}
          AND password = #{password}
    </select>

    <!-- íšŒì›ê°€ìž… -->
    <insert id="insertUser"
            parameterType="org.example.teamproject.vo.UserVO">
        INSERT INTO user (
            username, password, email, role, class_code
        ) VALUES (
                     #{username}, #{password}, #{email}, #{role}, #{classCode}
                 )
    </insert>

    <!-- IDë¡œ ì¡°íšŒ -->
    <select id="findById"
            parameterType="int"
            resultMap="UserMap">
        SELECT *
        FROM user
        WHERE id = #{id}
    </select>

    <!-- í•™ìƒ ëª©ë¡ -->
    <select id="findStudentsByClassCode"
            parameterType="String"
            resultMap="UserMap">
        SELECT *
        FROM user
        WHERE class_code = #{classCode}
          AND role = 'STUDENT'
    </select>

    <!-- í•™ë¶€ëª¨ ëª©ë¡ -->
    <select id="findParentsByClassCode"
            parameterType="String"
            resultMap="UserMap">
        SELECT *
        FROM user
        WHERE class_code = #{classCode}
          AND role = 'PARENT'
    </select>

</mapper>
